extends ../../main.pug

mixin contact(name, message, time, ava, counter)
    li
        div.contacts-item
            div._avatar
                img(src=ava)
            div._info
                div._name=name
                div._message-preview=message
                div._time=time
                if counter
                    div._counter=counter

mixin message(message, time,my)
    li(class=my ? "chat-message _my" : "chat-message")
        div._text=message
        div._time=time


mixin imageMessage(url, my)
    li(class=my ? "chat-message _image _my" : "chat-message _image")
        img(src=url)


